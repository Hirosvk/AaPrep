<h1>Create a new entry!</h1>
<%= form_for(@hirohiro) do |f| %>
  <ul>
    <% @hirohiro.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %><br />
  </p>
  <p>
      <%= f.label :subtitle %><br />
      <%= f.text_field :subtitle %><br />
  </p>
  <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %><br />
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
